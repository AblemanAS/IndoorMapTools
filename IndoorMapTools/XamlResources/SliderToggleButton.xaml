<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Style x:Key="SliderToggleButtonStyle" TargetType="ToggleButton">
        <Setter Property="FontSize" Value="11"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="ToggleButton">
                    <StackPanel Orientation="Horizontal">
                        <ContentPresenter VerticalAlignment="Center" Margin="2"/>
                        <Canvas Width="32" Height="16" Margin="2">
                            <Line x:Name="body" StrokeStartLineCap="Round" StrokeEndLineCap="Round"
                                                 X1="8" Y1="8" X2="24" Y2="8" StrokeThickness="16" Stroke="LightSteelBlue"/>
                            <Ellipse x:Name="core" Width="12" Height="12" Fill="White" 
                                                    Canvas.Left="2" Canvas.Top="2" />
                        </Canvas>
                    </StackPanel>
                    <ControlTemplate.Resources>
                        <Storyboard x:Key="OnCheckAnimation">
                            <DoubleAnimationUsingKeyFrames BeginTime="00:00:00" Storyboard.TargetName="core" 
                                                                              Storyboard.TargetProperty="(Canvas.Left)">
                                <SplineDoubleKeyFrame KeyTime="00:00:00.1000000" Value="18"/>
                            </DoubleAnimationUsingKeyFrames>
                        </Storyboard>
                        <Storyboard x:Key="OnUncheckAnimation">
                            <DoubleAnimationUsingKeyFrames BeginTime="00:00:00" Storyboard.TargetName="core" 
                                                                              Storyboard.TargetProperty="(Canvas.Left)">
                                <SplineDoubleKeyFrame KeyTime="00:00:00.1000000" Value="2"/>
                            </DoubleAnimationUsingKeyFrames>
                        </Storyboard>
                    </ControlTemplate.Resources>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsChecked" Value="True">
                            <Trigger.EnterActions>
                                <BeginStoryboard Storyboard="{StaticResource OnCheckAnimation}"/>
                            </Trigger.EnterActions>
                            <Trigger.ExitActions>
                                <BeginStoryboard Storyboard="{StaticResource OnUncheckAnimation}"/>
                            </Trigger.ExitActions>
                        </Trigger>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter TargetName="body" Property="Stroke" Value="SteelBlue"/>
                        </Trigger>
                        <Trigger Property="IsEnabled" Value="False">
                            <Setter Property="Foreground" Value="#CCCCCC"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
</ResourceDictionary>