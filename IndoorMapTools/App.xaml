<Application x:Class="IndoorMapTools.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:sys="clr-namespace:System;assembly=mscorlib">
    <Application.Resources>
        <ResourceDictionary >
            <ResourceDictionary.MergedDictionaries >
                <!--<ResourceDictionary Source="XamlResources/SliderToggleButton.xaml"/>-->
                <ResourceDictionary Source="XamlResources/SystemButton.xaml"/>
                <ResourceDictionary Source="XamlResources/ColumnSplitter.xaml"/>
                <ResourceDictionary Source="XamlResources/BetterLookGroupBox.xaml"/>
                <ResourceDictionary Source="XamlResources/DefaultStrings.xaml"/>
                <ResourceDictionary Source="XamlResources/AssetsDefinitions.xaml"/>
                <ResourceDictionary Source="XamlResources/VisibilityCheckBox.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        
            <!-- 앱 버전 정보 Generation.MajorRevision.MinorRevision.BugFix -->
            <sys:String x:Key="AppVersion">0.7.t.5</sys:String>

            <!-- App.xaml.cs 에서 로드되는 DynamicResources -->
            <x:Null x:Key="StairCursor"/>
            <x:Null x:Key="ElevatorCursor"/>
            <x:Null x:Key="EscalatorCursor"/>
            <x:Null x:Key="EntranceCursor"/>
            <x:Null x:Key="StationCursor"/>
            <x:Null x:Key="MarkCursor"/>
            <x:Null x:Key="UnmarkCursor"/>
            <sys:String x:Key="TileSourceURL">https://tile.openstreetmap.org/{z}/{x}/{y}.png</sys:String>

            <!-- 기본값 -->
            <Point x:Key="DefaultLonlat" X="127.36554" Y="36.37417"/>
            
            <!-- Map View용 컬러브러시, 이펙트 -->
            <SolidColorBrush x:Key="TransparentWhite" Color="White" Opacity="0.5"/>
            <SolidColorBrush x:Key="TransparentLightBlue" Color="LightBlue" Opacity="0.6"/>
            <SolidColorBrush x:Key="TransparentAliceBlue" Color="AliceBlue" Opacity="0.6"/>
            <SolidColorBrush x:Key="TransparentRed" Color="Red" Opacity="0.3"/>
            <DropShadowEffect x:Key="TransparentBlueEffect" Color="DeepSkyBlue" ShadowDepth="0" BlurRadius="0"/>
            <DropShadowEffect x:Key="AliceBlueEffect" Color="AliceBlue" ShadowDepth="0" BlurRadius="5"/>

            <!-- 범용 스타일 -->
            <Style TargetType="TextBlock">
                <Style.Triggers>
                    <Trigger Property="IsEnabled" Value="False">
                        <Setter Property="Foreground" Value="Gray" />
                    </Trigger>
                </Style.Triggers>
            </Style>

            <Style TargetType="TabControl" >
                <Setter Property="Background">
                    <Setter.Value>
                        <SolidColorBrush Color="{DynamicResource {x:Static SystemColors.MenuBarColorKey}}"/>
                    </Setter.Value>
                </Setter>
                <Style.Triggers>
                    <Trigger Property="DataContext" Value="{x:Null}">
                        <Setter Property="IsEnabled" Value="False"/>
                        <Setter Property="Background" Value="LightGray"/>
                    </Trigger>
                </Style.Triggers>
            </Style>

            <Style TargetType="Image">
                <Style.Triggers>
                    <Trigger Property="IsEnabled" Value="False">
                        <Setter Property="Opacity" Value="0.5"/>
                    </Trigger>
                </Style.Triggers>
            </Style>

            <Style TargetType="Slider">
                <Setter Property="IsTabStop" Value="False"/>
            </Style>

            <Style TargetType="CheckBox">
                <Setter Property="IsTabStop" Value="False"/>
            </Style>

            <Style x:Key="RoundButtonStyle" TargetType="{x:Type ToggleButton}" >
                <Style.Resources>
                    <Style TargetType="{x:Type Border}">
                        <Setter Property="CornerRadius" Value="99999999"/>
                    </Style>
                </Style.Resources>
                <Setter Property="ToolTipService.InitialShowDelay" Value="0"/>
            </Style>

            <Style x:Key="DialogButtonStyle" TargetType="{x:Type Button}" >
                <Setter Property="Width" Value="70"/>
                <Setter Property="Height" Value="25"/>
                <Setter Property="Margin" Value="5,5,0,0"/>
            </Style>
        </ResourceDictionary>
    </Application.Resources>
</Application>
